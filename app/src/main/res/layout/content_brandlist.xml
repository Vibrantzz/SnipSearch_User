<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRateText"
                android:paddingBottom="15dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="11dp"
                    android:fontFamily="@font/lato"
                    android:text="YOUR LOCATION"
                    android:textColor="@color/txtheadings"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignStart="@+id/textView2"
                    android:layout_below="@+id/textView2"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/logo2" />

                <TextView
                    android:id="@+id/txtuloc"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="48dp"
                    android:fontFamily="@font/lato"
                    android:paddingBottom="2dp"
                    android:text="Sahara Star, Vile Parle East"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtchangeloc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView2"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="22dp"
                    android:fontFamily="@font/lato"
                    android:paddingBottom="2dp"
                    android:text="CHANGE"
                    android:textColor="@color/txtright"
                    android:textSize="12sp" />


                <ImageView
                    android:id="@+id/rectanglesearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/rectangle14" />

                <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="false"
                    android:layout_below="@+id/txtuloc"
                    android:layout_centerHorizontal="false"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/rectangle14"
                    android:focusableInTouchMode="false"
                    android:iconifiedByDefault="false"
                    android:inputType="text"
                    android:paddingBottom="3dp"
                    android:paddingTop="5dp"
                    android:queryHint="Search for salons, spas, etc">

                </SearchView>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/brand_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rl2"

                ></android.support.v7.widget.RecyclerView>
        </RelativeLayout></ScrollView>
</RelativeLayout>