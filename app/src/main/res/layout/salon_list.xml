<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hairlist_card"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:paddingTop="3dp"
    android:visibility="visible"
    app:cardElevation="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/thumbnail"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:clipChildren="true"
            app:cardCornerRadius="11dp">

            <ImageView
                android:id="@+id/sicon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/salonbgdummy" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="12dp"
                app:srcCompat="@drawable/imgoverlay" />

            <ImageView
                android:id="@+id/ratebg"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:layout_marginLeft="59dp"
                android:layout_marginTop="55dp"
                app:srcCompat="@drawable/ratingellipse" />

            <TextView
                android:id="@+id/txtrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="66dp"
                android:fontFamily="@font/lato"
                android:text="3.5"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="16dp"
            android:layout_height="16dp"

            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_marginEnd="61dp"
            android:paddingBottom="2dp"
            app:srcCompat="@drawable/nvpin" />

        <TextView
            android:id="@+id/txtdistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView19"
            android:layout_marginStart="-60dp"
            android:layout_toEndOf="@+id/imageView19"
            android:paddingBottom="2dp"
            android:paddingLeft="3dp"
            android:text="600M"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sname"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toEndOf="@+id/thumbnail"
            android:fontFamily="@font/lato"
            android:paddingBottom="3dp"
            android:paddingLeft="8dp"
            android:text="Divine Hair Salon"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/saddress"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sname"
            android:layout_toEndOf="@+id/thumbnail"
            android:paddingBottom="1dp"
            android:paddingLeft="8dp"
            android:text="VILE PARLE EAST, MUMBAI"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/stype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/saddress"
            android:layout_toEndOf="@+id/thumbnail"
            android:fontFamily="@font/lato"
            android:paddingBottom="5dp"
            android:paddingLeft="8dp"
            android:text="Haircut, Pedicures."
            android:textSize="12sp" />

        <FrameLayout
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/stype"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            android:layout_toEndOf="@+id/thumbnail"
            android:background="@color/framecolor">

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@+id/separator"
            android:layout_below="@+id/separator"
            android:paddingTop="3dp"
            app:srcCompat="@drawable/offericon" />

        <TextView
            android:id="@+id/soffers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator"
            android:layout_toEndOf="@+id/imageView15"
            android:fontFamily="@font/lato"
            android:paddingLeft="3dp"
            android:paddingTop="3dp"
            android:text="40% off on your first visit!"
            android:textColor="@color/txtoffers"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

