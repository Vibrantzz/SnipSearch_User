<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maincard"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/thumbnail"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/salonbgdummy" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txtname"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/thumbnail"
            android:fontFamily="@font/lato"
            android:paddingRight="12dp"
            android:text="Happy in the Head Hair Studio"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtloc"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtname"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/thumbnail"
            android:fontFamily="@font/lato"
            android:paddingRight="12dp"
            android:text="Hill Road, Bandra." />

        <TextView
            android:id="@+id/txtapp"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignStart="@+id/txtname"
            android:layout_below="@+id/txtloc"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/lato"
            android:paddingRight="12dp"
            android:text="Your Appointment for a haircut on 20th May at 11:30 am has been confirmed. Thank You!"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>