<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maincard"
    android:layout_width="match_parent"
    android:layout_height="160dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/thumbnail"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="17dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">


            <ImageView
                android:id="@+id/uimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/dummyspecs" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/thumbnail"
            android:layout_toEndOf="@+id/thumbnail"
            android:fontFamily="@font/lato"
            android:paddingLeft="5dp"
            android:text="User Name"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/sname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/uname"
            android:layout_toEndOf="@+id/thumbnail"
            android:capitalize="none"
            android:fontFamily="@font/lato"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Salon Name"
            android:textAllCaps="true"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ratebg"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_marginEnd="19dp"
            app:srcCompat="@drawable/ratingellipse" />

        <TextView
            android:id="@+id/txtrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="26dp"
            android:layout_marginTop="26dp"
            android:text="3.5"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sname"
            android:layout_toEndOf="@+id/thumbnail"
            android:fontFamily="@font/lato"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="andheri east, mumbai"
            android:textAllCaps="true"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/timeicon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignStart="@+id/ratebg"
            android:layout_below="@+id/ratebg"
            android:layout_marginTop="3dp"
            android:paddingRight="2dp"
            app:srcCompat="@drawable/time" />

        <TextView
            android:id="@+id/timetxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/ratebg"
            android:layout_below="@+id/ratebg"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/lato"
            android:paddingBottom="1dp"
            android:text="2M"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtreview"
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/thumbnail"
            android:layout_centerHorizontal="false"
            android:fontFamily="@font/lato"
            android:maxLength="140"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="10dp"
            android:text="This is the review text that shall be displayed here on the user review fragment, that is seen on the User profile of this App." />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/txtreview"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="13dp"
            android:background="@color/contact_number">

        </FrameLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>