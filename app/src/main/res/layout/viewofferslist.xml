<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maincard"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginTop="8dp"
    android:paddingTop="3dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/thumbnail"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/nyc1" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/txtname"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/thumbnail"
            android:fontFamily="@font/lato"
            android:text="Happy in the Head Hair Studio"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtloc"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtname"
            android:layout_toEndOf="@+id/thumbnail"
            android:fontFamily="@font/lato"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Hill Road, Bandra" />

        <ImageView
            android:id="@+id/imgoffers"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@+id/txtloc"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/thumbnail"
            app:srcCompat="@drawable/offericon" />

        <TextView
            android:id="@+id/xtoffer"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtloc"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/imgoffers"
            android:text="Enjoy 40% discount on your first visit!"
            android:textColor="@color/txtoffers"
            android:textSize="12sp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>