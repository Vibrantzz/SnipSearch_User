<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="3dp">


        <ImageView
            android:id="@+id/offerimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/offersmenu" />

        <TextView
            android:id="@+id/titletxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/offerimg"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/offerimg"
            android:fontFamily="@font/lato"
            android:text="Get 40% off on your first visit!"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/validtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titletxt"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/offerimg"
            android:fontFamily="@font/lato"
            android:text="Valid till:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/periodtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titletxt"
            android:layout_marginStart="3dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/validtxt"
            android:fontFamily="@font/lato"
            android:text="First visit only"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/expandbtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/titletxt"
            android:layout_marginEnd="12dp"
            app:srcCompat="@drawable/expand2" />

        <ImageView
            android:id="@+id/closedbtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/titletxt"
            android:layout_marginEnd="12dp"
            android:visibility="gone"
            app:srcCompat="@drawable/expand" />

        <FrameLayout
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/offerimg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/framecolor">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/infoframe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/desctxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="44dp"
                    android:fontFamily="@font/lato"
                    android:paddingBottom="8dp"
                    android:text="This is the description text one can see in the offers section when you click the arrow to expand this section. This section disappears once you click the icon to close this view." />

                <TextView
                    android:id="@+id/tandclbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/desctxt"
                    android:layout_below="@+id/desctxt"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/lato"
                    android:text="Terms and Conditions"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tandctxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/tandclbl"
                    android:layout_below="@+id/tandclbl"
                    android:layout_marginTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="THese are the terms and constiotions that are presented for the current offer chosen to be expanded and viewed" />
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>