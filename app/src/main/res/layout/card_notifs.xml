<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">


        <ImageView
            android:id="@+id/salonimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/logo4" />

        <TextView
            android:id="@+id/titletxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/salonimg"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/salonimg"
            android:fontFamily="@font/lato"
            android:paddingTop="5dp"
            android:text="This is the notification text"
            android:textColor="@android:color/black" />

        <FrameLayout
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/salonimg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/framecolor">

        </FrameLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>