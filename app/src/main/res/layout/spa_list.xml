<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hairlist_card"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:paddingTop="3dp"
    android:visibility="visible"
    app:cardElevation="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:clipChildren="true"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/salonbgdummy" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_marginTop="26dp"
                app:srcCompat="@drawable/imgoverlay" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="35dp"
                android:layout_height="45dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="65dp"
                app:srcCompat="@drawable/ratingellipse" />

            <TextView
                android:id="@+id/txtrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="76dp"
                android:layout_marginTop="78dp"
                android:text="3.5"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"

            android:layout_marginEnd="60dp"
            android:layout_marginTop="22dp"
            app:srcCompat="@drawable/greypin" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView19"
            android:layout_marginStart="-60dp"
            android:layout_toEndOf="@+id/imageView19"
            android:paddingBottom="2dp"
            android:paddingLeft="3dp"
            android:text="600M"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sname"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView19"
            android:layout_marginStart="102dp"
            android:paddingBottom="3dp"
            android:paddingLeft="15dp"
            android:text="Divine Hair Salon"
            android:textColor="@android:color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/saddress"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/sname"
            android:layout_centerVertical="true"
            android:paddingBottom="3dp"
            android:paddingLeft="15dp"
            android:text="Vile Parle East, Mumbai"
            android:textAllCaps="true"
            android:textColor="@color/txtheadings"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtservices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/sname"
            android:layout_below="@+id/saddress"
            android:paddingBottom="3dp"
            android:paddingLeft="15dp"
            android:text="Haircut, Pedicures."
            android:textColor="@color/txtheadings" />

        <FrameLayout
            android:id="@+id/frame"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/txtservices"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="115dp"
            android:background="#f1efef">

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/sname"
            android:layout_below="@+id/txtservices"
            android:layout_marginLeft="12dp"
            android:paddingTop="5dp"
            app:srcCompat="@drawable/offericon" />

        <TextView
            android:id="@+id/soffer"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame"
            android:layout_toEndOf="@+id/imageView20"
            android:paddingLeft="3dp"
            android:paddingTop="5dp"
            android:text="40% off on your first visit!" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

